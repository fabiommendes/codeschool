{% block style %}
    {{ super() }}
    <style>
        .profile-list {
            list-style: none;
            display: flex;
            flex-wrap: wrap;
        }
        .user-profile {
            min-width: 200px;
            background: #eee;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 10px;
        }
    </style>
{% endblock %}