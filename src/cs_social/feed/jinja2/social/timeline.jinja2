{% extends 'base.jinja2' %}

{% block content_title %}
    <h1>{{ gettext('%(user)s\'s timeline', user=request.user.first_name) }}</h1>
{% endblock %}

{% block content_body %}
    <ul>
        <li><a href="{{ url('social:feed') }}">{{ _('New post') }}</a></li>
    </ul>

    {% if not feeds %}
        <p>Nothing to see :(</p>
    {% else %}
        {% for feed in feeds %}
            {{ feed }}
        {% endfor %}
    {% endif %}
{% endblock %}