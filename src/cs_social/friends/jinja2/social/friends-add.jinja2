{% extends 'base.jinja2' %}

{% block content_title %}
    <h1>{{ _('Add new friends') }}</h1>
{% endblock %}

{% block content_body %}
    <form method="post">
        {{ csrf_input }}
        <ul>
            {% for friend in possible_friends %}
                <li><input type="checkbox"
                           name="user-{{ friend.username }}"><a href="{{ friend.profile.get_absolute_url() }}">{{ friend.get_full_name() }}</a>
                </li>
            {% endfor %}
        </ul>
        <input type="submit" value="Add selected friends">
    </form>
{% endblock %}